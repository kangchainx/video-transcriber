# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/video_transcriber

# Minio 配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=videots
MINIO_SECRET_KEY=videots12345678
MINIO_BUCKET=yvap
MINIO_REGION=us-east-1
MINIO_SECURE=false                   # 若 Minio 使用 HTTP 则为 false
MINIO_PREFIX=videos                  # 可选，对象键统一前缀
MINIO_PUBLIC_BASE_URL=http://localhost:9000   # 可选，对外可访问域名（用于返回可下载 URL）

# faster-whisper 模型配置
FASTER_WHISPER_MODEL=tiny
FASTER_WHISPER_DEVICE=cpu
FASTER_WHISPER_COMPUTE_TYPE=int8
DEFAULT_OUTPUT_FORMAT=txt

# 代理配置（中国大陆访问 YouTube 时开启）
PROXY_ENABLED=false
PROXY_URL=                             # 如 http://127.0.0.1:7890，开启时必填
PROXY_BYPASS=                          # 可选，逗号分隔无需代理的域名

# 临时目录（默认放在项目根目录 tmp 下，可自定义绝对路径）
TEMP_DIR=./tmp
CLEAN_TMP_FILE=true                  # 任务结束后是否清理临时文件
FILE_STORAGE_STRATEGY=minio          # 文件存储策略：minio 或 local
AUTH_ENABLED=false                  # 是否启用接口签名校验
AUTH_SHARED_SECRET=                 # 签名密钥，AUTH_ENABLED=true 时必填
AUTH_TOLERANCE_SECONDS=300          # 时间戳容忍秒数，默认 5 分钟

# 可执行路径（如有自定义安装路径）
FFMPEG_BIN=ffmpeg
YTDLP_BIN=yt-dlp
YTDLP_COOKIES_FILE=                  # 可选，指向 cookies.txt 文件路径，访问需登录视频时使用
YTDLP_COOKIES_FROM_BROWSER=          # 可选，格式 browser[:profile]，如 chrome:Default；若设置则优先于文件

# OpenAI 备用配置（若需要调用 whisper-1）
OPENAI_API_KEY=
OPENAI_BASE_URL=

# YouTube 细粒度配置
YOUTUBE_PLAYER_CLIENT=default          # 默认 default；若设为 android 建议同时提供 po_token
YOUTUBE_PO_TOKEN=                      # 可选，android.gvs+XXXX
